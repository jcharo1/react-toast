{
  "name": "react-toastified",
  "version": "1.3.3",
  "description": "An easy-to-use, customizable toast notification system for React apps",
  "main": "./components/Toast.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare-package": "mkdir npm-package && cp -r components npm-package/components && cp -r styles npm-package/styles && terser ./components/Toast.js.js -o ./npm-package/components/Toast.min.js && postcss ./styles/Toast.css -o ./npm-package/styles/Toast.min.css"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "react-toastified",
    "react-toastify",
    "vercel",
    "nextjs",
    "alert",
    "message",
    "popup",
    "feedback"
  ],
  "author": "Justin Charo",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcharo1/react-toastified.git"
  },
  "homepage": "https://github.com/jcharo1/react-toastified#readme",
  "bugs": {
    "url": "https://github.com/jcharo1/react-toastified/issues"
  },
  "dependencies": {
    "next": "^13.5.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "cssnano": "^6.0.1",
    "eslint": "^8",
    "eslint-config-next": "13.5.4",
    "postcss": "^8",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3",
    "terser": "^5.21.0",
    "typescript": "^5"
  }
}
