{
  "name": "react-toastified",
  "version": "1.3.3",
  "description": "An easy-to-use, customizable toast notification system for React apps",
  "main": "./components/Toast.js",
  "scripts": {
    "build": "sass --style=compressed ./src/Toast.scss:./dist/Toast.module.css && webpack --mode production",
    "start": "webpack-dev-server --mode development",
    "compile-sass": "sass --style=compressed ./src/Toast.scss:./dist/Toast.css",
    "test": "jest",
    "prepare-package": "mkdir npm-package && cp -r components npm-package/components && cp -r styles npm-package/styles && terser ./components/Toast.js.js -o ./npm-package/components/Toast.min.js && postcss ./styles/Toast.module.css -o ./npm-package/styles/Toast.min.css"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "react-toastified",
    "react-toastify",
    "vercel",
    "nextjs",
    "alert",
    "message",
    "popup",
    "feedback"
  ],
  "author": "Justin Charo",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcharo1/react-toastified.git"
  },
  "homepage": "https://github.com/jcharo1/react-toastified#readme",
  "bugs": {
    "url": "https://github.com/jcharo1/react-toastified/issues"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^9.1.3",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "jest": "^29.7.0",
    "postcss-cli": "^10.1.0",
    "style-loader": "^3.3.3",
    "terser": "^5.21.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
